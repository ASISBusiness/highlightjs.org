{
  "name": "highlightjs.org",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm-run-all build:deps:clone build:deps:cache build:deps:themes build:next",
    "build:next": "next build",
    "build:deps:cache": "node scripts/build-download-cache.js",
    "build:deps:clone": "./scripts/clone-hljs-source.sh",
    "build:deps:themes": "node scripts/build-styles.js",
    "start": "next start -p $PORT",
    "format": "prettier --list-different --write \"{.github,components,layouts,pages,scripts,styles}/**/*.{css,js,jsx,mdx,ts,tsx,scss,yaml,yml}\""
  },
  "dependencies": {
    "@allejo/react-position-sticky": "^1.0.0-rc.1",
    "bootstrap": "^4.5.2",
    "dedent": "^0.7.0",
    "file-saver": "^2.0.5",
    "gray-matter": "^4.0.2",
    "highlight.js": "11.6.0",
    "indent-textarea": "^2.0.3",
    "jszip": "^3.10.0",
    "lodash.escaperegexp": "^4.1.2",
    "lzutf8": "^0.6.0",
    "markdown-it": "^12.0.4",
    "markdown-it-attrs": "^4.0.0",
    "next": "^12.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.26.11"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.5",
    "@types/markdown-it": "^12.0.1",
    "@types/node": "^16.11.45",
    "@types/react": "^17.0.47",
    "import-sort-style-module": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "typescript": "^4.4.4"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
