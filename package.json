{
  "name": "highlightjs.org",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm-run-all build:deps:clone build:deps:themes build:next",
    "build:next": "next build && next export",
    "build:deps:clone": "./scripts/clone-hljs-source.sh",
    "build:deps:themes": "node scripts/build-styles.js",
    "start": "next start -p $PORT",
    "format": "prettier --list-different --write \"{.github,components,layouts,pages,scripts,styles}/**/*.{css,js,jsx,mdx,ts,tsx,scss,yaml,yml}\""
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "dedent": "^0.7.0",
    "gray-matter": "^4.0.2",
    "highlight.js": "11.0.1",
    "indent-textarea": "^2.0.3",
    "markdown-it": "^12.0.4",
    "markdown-it-attrs": "^4.0.0",
    "next": "9.5.3",
    "next-transpile-modules": "^6.3.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sass": "^1.26.11"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.0.1",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "import-sort-style-module": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "typescript": "^4.0.3"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
